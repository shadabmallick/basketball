<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sport.supernathral">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".Utils.GlobalClass"
        android:allowBackup="true"
        android:icon="@mipmap/icon0"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon0"
        android:supportsRtl="true"
        android:largeHeap="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme">


        <activity android:name=".activity.Splash"
            android:theme="@style/MyTheme"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".activity.Splash2"
            android:theme="@style/MyTheme"
            >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

            </intent-filter>
        </activity>


        <activity android:name=".activity.SignUp"
            android:theme="@style/MyTheme"
            >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

            </intent-filter>
        </activity>

        <activity android:name=".activity.LoginScreen"
            android:theme="@style/MyTheme"
            >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

            </intent-filter>
        </activity>

        <activity android:name=".activity.ForgotPassword"
            android:theme="@style/MyTheme"
            >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

            </intent-filter>
        </activity>


        <activity android:name=".activity.HomePage"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            android:windowSoftInputMode="adjustPan|stateHidden"
            />

        <activity android:name=".activity.ChatScreen"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            android:windowSoftInputMode="adjustPan|stateHidden"
             />

        <activity android:name=".activity.GamesMain"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            android:windowSoftInputMode="adjustPan|stateHidden"
            />

        <activity android:name=".activity.EventScreen"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            android:windowSoftInputMode="adjustPan|stateHidden"
            />

        <activity android:name=".activity.ProfileScreen"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            android:windowSoftInputMode="adjustPan|stateHidden"
            />

        <activity android:name=".activity.SettingsScreen"
            android:theme="@style/MyTheme"
            android:windowSoftInputMode="adjustPan|stateHidden"
            />




        <service android:name=".Utils.GPSTracker"/>



    </application>

</manifest>