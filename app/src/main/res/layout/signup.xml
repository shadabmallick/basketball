<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/back_black"
            android:padding="10dp"
            android:tint="@color/black"
            />

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:padding="15dp"
            android:textSize="15dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/dark_gray"
            />

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon0"
        android:background="@android:color/white"
        android:paddingTop="20dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingTop="20dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        >

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/black"
            android:backgroundTint="@color/dark_gray"
            android:padding="15dp"
            android:hint="@string/hint_name"
            />

        <EditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/black"
            android:backgroundTint="@color/dark_gray"
            android:padding="15dp"
            android:layout_marginTop="20dp"
            android:hint="@string/hint_email"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            >

            <RelativeLayout
                android:id="@+id/rel_drop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                >

                <TextView
                    android:id="@+id/tv_selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:padding="15dp"
                    android:text="Trainer"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/down_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="5dp"
                    />


            </RelativeLayout>


            <View
                android:id="@+id/view_dropdown"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@color/black"
                android:layout_below="@+id/rel_drop"
                />


            <RelativeLayout
                android:id="@+id/rel_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/view_dropdown"
                >

                <EditText
                    android:id="@+id/edt_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/black"
                    android:backgroundTint="@color/dark_gray"
                    android:padding="15dp"
                    android:layout_centerVertical="true"
                    android:paddingRight="30dp"
                    android:hint="@string/hint_password"
                    />

                <ImageView
                    android:id="@+id/iv_eye"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="0dp"
                    android:src="@mipmap/eye"
                    android:padding="10dp"
                    />

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/rl_register"
                android:layout_marginTop="25dp"
                android:layout_height="45dp"
                android:layout_width="match_parent"
                android:layout_below="@+id/rel_password"
                >

                <ImageView
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/button"
                    android:scaleType="fitXY"

                    />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/signup"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    />

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/rel_popup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_dropdown"
                android:animateLayoutChanges="true"
                android:background="@android:color/transparent"
                >

                <include
                    layout="@layout/signup_dropdown"
                    />

            </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>