<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.Games">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp">


     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical">
         <RelativeLayout
             android:id="@+id/rl_first"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:padding="10dp"
             android:background="@color/light_grey"
             >

             <TextView
                 android:id="@+id/tv_header"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="20sp"
                 android:textStyle="bold"
                 android:textColor="@color/black"
                 android:text="Foregoing"
                 />

         </RelativeLayout>


         <android.support.v7.widget.RecyclerView
             android:id="@+id/recycle_game"
             android:layout_below="@+id/rl_first"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"

             >

         </android.support.v7.widget.RecyclerView>
         <RelativeLayout
             android:id="@+id/rl_second"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:padding="10dp"
             android:layout_below="@+id/recycle_game"
             android:background="@color/light_grey"
             >

             <TextView
                 android:id="@+id/tv_header1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="20sp"
                 android:textStyle="bold"
                 android:textColor="@color/black"
                 android:text="Ongoing"
                 />

         </RelativeLayout>
         <android.support.v7.widget.RecyclerView
             android:id="@+id/recycle_game1"
             android:layout_below="@+id/rl_second"

             android:layout_width="match_parent"
             android:layout_height="wrap_content"

             >
         </android.support.v7.widget.RecyclerView>
         <RelativeLayout
             android:id="@+id/rl_third"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:padding="10dp"
             android:layout_below="@+id/recycle_game1"
             android:background="@color/light_grey"
             >

             <TextView
                 android:id="@+id/tv_header2"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="20sp"
                 android:textStyle="bold"
                 android:textColor="@color/black"
                 android:text="Upcoming"
                 />

         </RelativeLayout>
         <android.support.v7.widget.RecyclerView
             android:id="@+id/recycle_game2"
             android:layout_below="@+id/rl_third"

             android:layout_width="match_parent"
             android:layout_height="wrap_content"

             >
         </android.support.v7.widget.RecyclerView>

     </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/layout_top"
        >

        <LinearLayout
            android:id="@+id/llnews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="5dp"
            >

            <ImageView
                android:id="@+id/img_news"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/home_black"
                />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/llchat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="5dp"
            >

            <ImageView
                android:id="@+id/info_graphic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/chat_black"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_games"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="5dp"
            >

            <ImageView
                android:id="@+id/info_blog"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/game_yellow"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="5dp"
            >

            <ImageView
                android:id="@+id/enquiry"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/event_black"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"

            android:padding="5dp"
            >

            <ImageView
                android:id="@+id/profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/profile_black"
                />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>